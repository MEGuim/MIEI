doctype html
html 
    head
        title Desenvolvimento de Aplicações Web (aula6)
        meta(charset="UTF-8")
        link(rel="stylesheet", href="/w3.css")
    body
        .w3-container
            .w3-card-4
                header.w3.container.w3-teal
                    h3 Upload de um Ficheiro
                .w3-container
                    form.w3-container(action='/processaForm', method='POST' enctype='multipart/form-data')
                        label.w3-text-teal
                            b Ficheiro
                        input.w3-input.w3-border.w3-light-grey(type='file' name='ficheiro')
                        label.w3-text-teal
                            b Descrição
                        input.w3-input.w3-border.w3-light-grey(type='text' name='descricao')
                        input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
        .w3-container
            .w3-card-4
            header.w3.container.w3-teal
                h3 Lista de Ficheiros
            .w3-container
                table.w3-table-all
                    tr 
                        th Ficheiro
                        th Descrição
                    each fich in lista
                        tr
                            td= fich.nome
                            td= fich.descricao
    footer.w3.container.w3-teal
        address Gerado por formApp